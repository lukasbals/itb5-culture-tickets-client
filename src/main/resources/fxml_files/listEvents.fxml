<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.td.gui.ListEventsGuiController">
    <top>
        <ToolBar>
            <TextField promptText="Search event" fx:id="_searchFieldEvent"/>
            <TextField promptText="Search artist" fx:id="_searchFieldArtist"/>
            <TextField promptText="Search location" fx:id="_searchFieldLocation"/>
            <DatePicker promptText="Search date" fx:id="_searchFieldDate"/>
            <Button text="Search" onAction="#searchEvents"/>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="tableViewEvents" onMouseClicked="#selectedEvent" prefHeight="590.0"
                   prefWidth="500.0" editable="true">
            <columns>
                <TableColumn prefWidth="200.0" text="Event">
                    <cellValueFactory>
                        <PropertyValueFactory property="eventName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="150.0" text="Artists">
                    <cellValueFactory>
                        <PropertyValueFactory property="artists"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="150.0" text="Category">
                    <cellValueFactory>
                        <PropertyValueFactory property="category"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="150.0" text="Location">
                    <cellValueFactory>
                        <PropertyValueFactory property="location"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="150.0" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="100.0" text="Price from">
                    <cellValueFactory>
                        <PropertyValueFactory property="minPrice"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <items>
                <FXCollections fx:id="_events" fx:factory="observableArrayList"/>
            </items>
        </TableView>
    </center>
</BorderPane>
