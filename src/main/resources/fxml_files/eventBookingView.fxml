<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.td.gui.BookingViewGuiController"
          alignment="CENTER" vgap="10.0" hgap="30.0">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints prefWidth="150" maxWidth="Infinity" halignment="RIGHT"/>
        <ColumnConstraints prefWidth="140" maxWidth="Infinity"/>
    </columnConstraints>
    <Label text="Booking View" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
        <font>
            <Font name="Arial" size="24"/>
        </font>
        <GridPane.margin>
            <Insets top="20" bottom="20"/>
        </GridPane.margin>
    </Label>
    <Label text="Customer " GridPane.rowIndex="1" GridPane.halignment="LEFT"/>
    <Label text="Name: " GridPane.rowIndex="2"/>
    <Label text="Tickets " GridPane.rowIndex="3" GridPane.halignment="LEFT"/>
    <Label text="Category name: " GridPane.rowIndex="4"/>
    <Label text="Price: " GridPane.rowIndex="5"/>
    <Label text="Number: " GridPane.rowIndex="6"/>
    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="customername" prefWidth="140"/>
    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="categoryname" prefWidth="140"/>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="5" fx:id="price"/>
    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="ticketnumber" prefWidth="140"/>
    <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2"
          GridPane.rowSpan="1" GridPane.halignment="CENTER">
        <children>
            <Button fx:id="buy" text="Buy" onAction="#buyButtonClicked" prefWidth="150">
                <HBox.margin>
                    <Insets right="40.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="reserve" text="Reserve" onAction="#reserveButtonClicked" prefWidth="150">
                <HBox.margin>
                    <Insets right="40.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="cancel" text="Cancel" onAction="#cancelButtonClicked" prefWidth="150"/>
        </children>
    </HBox>
</GridPane>
